<Window x:Class="WpfWalkThrough.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWalkThrough"
        mc:Ignorable="d"
        Title="MojeAppka" Height="450" Width="800"
        PreviewMouseUp="Window_PreviewMouseUp"
        >
    <Window.Resources>
        <Style x:Key="WindowLocal"  TargetType="Button">
            <Setter Property="Background" Value="Orange" />
            <Setter Property="BorderBrush" Value="Crimson" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="25" />
        </Style>
    </Window.Resources>
    <DockPanel>
        <ScrollViewer>
            <Label Name="label">Klikni na tlačítko</Label>
        </ScrollViewer>
        <Button Name="button" Style="{StaticResource WindowLocal}">Click Me!</Button>
        <Button Name="buttonToo">Click Me Too!</Button>
    </DockPanel>
</Window>
