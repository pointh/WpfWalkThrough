<Window
    x:Class="WpfWalkThrough.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:WpfWalkThrough.Properties"
    Title="{x:Static properties:Resource1.AppTitle}"
    Width="800"
    Height="350"
    PreviewMouseUp="Window_PreviewMouseUp"
    mc:Ignorable="d">
    <!--
        xmlns:properties="clr-namespace:WpfWalkThrough.Properties" vytvoří nový jmenný prostor, do kterého se
        budeme odkazovat pod jménem "properties"
    -->
    <!--
        Název okna vezmeme ze souboru Resource1, ve kterém hledáme záznam s klíčem 'AppTitle',
        Access modifier musí být public!
    -->

    <Window.Resources>
        <!--  Tento Resource má rozsah jen pro toto Window - proto se jmenuje ...něcoLocal  -->
        <Style x:Key="WindowLocal" TargetType="Button">
            <Setter Property="Background" Value="Orange" />
            <Setter Property="BorderBrush" Value="Crimson" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="25" />
        </Style>
        <Style x:Key="LabelLocal" TargetType="Label">
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style x:Key="ScrollLocal" TargetType="ScrollViewer">
            <Setter Property="Background" Value="Gray" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView x:Name="LVHistory"
            Grid.Row="0"
            Grid.Column="0"
            ItemsSource="{Binding History}"            
            Background="Beige"
            Foreground="Black"
            >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--  Použijeme lokální styl  -->
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Style="{StaticResource WindowLocal}">
            <StackPanel>
                <Image
                    x:Name="ButtonImage"
                    Width="40"
                    Height="40"
                    Margin="5"
                    Source="Images/HandRight.png" />
                <TextBlock>Klikni na mě!</TextBlock>
            </StackPanel>
        </Button>

        <!--  Použijeme globální styl definovaný v App.xaml a platný pro všechny prvky typu Button v aplikaci  -->
        <Button Grid.Column="2" Content="{Binding Source={x:Static properties:Settings.Default}, Path='MeTaky'}" />
        <!--  Nápis na tlačítku vezmeme z prostoru properties, ze souboru Settings a klíčem 'ZatimNic'  -->

        <TextBlock
            Grid.Row="2"
            Grid.ColumnSpan="3"
            VerticalAlignment="Bottom"
            Background="Black"
            FontWeight="DemiBold"
            Foreground="White"
            Text="{Binding LastClick}" />
    </Grid>
</Window>
