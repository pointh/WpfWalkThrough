<Window
    x:Class="WpfWalkThrough.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfWalkThrough"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MojeAppka"
    Width="800"
    Height="150"
    PreviewMouseUp="Window_PreviewMouseUp"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="WindowLocal" TargetType="Button">
            <Setter Property="Background" Value="Orange" />
            <Setter Property="BorderBrush" Value="Crimson" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="25" />
        </Style>
    </Window.Resources>

    <StackPanel>
        <DockPanel>
            <ScrollViewer>
                <Label Name="label">Klikni na tlačítko</Label>
            </ScrollViewer>
            <Button Name="button" Style="{StaticResource WindowLocal}">Click Me!</Button>
            <Button Name="buttonToo">Click Me Too!</Button>
        </DockPanel>
        <TextBlock FontWeight="DemiBold" VerticalAlignment="Bottom" Text="{Binding LastClick}"/>
    </StackPanel>
</Window>
