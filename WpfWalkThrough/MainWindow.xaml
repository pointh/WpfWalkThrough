<Window
    x:Class="WpfWalkThrough.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfWalkThrough"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:WpfWalkThrough.Properties"
    Title="{x:Static properties:Resource1.AppTitle}"
    Width="800"
    Height="350"
    PreviewMouseUp="Window_PreviewMouseUp"
    mc:Ignorable="d">
    <!--
        xmlns:properties="clr-namespace:WpfWalkThrough.Properties" vytvoří nový jmenný prostor, do kterého se
        budeme odkazovat pod jménem "properties"
    -->
    <!--
        Název okna vezmeme ze souboru Resource1, ve kterém hledáme záznam s klíčem 'AppTitle',
        Access modifier musí být public!
    -->

    <Window.Resources>
        <!--  Tento Resource má rozsah jen pro toto Window - proto se jmenuje ...něcoLocal  -->
        <Style x:Key="WindowLocal" TargetType="Button">
            <Setter Property="Background" Value="Orange" />
            <Setter Property="BorderBrush" Value="Crimson" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="25" />
        </Style>
        <Style x:Key="LabelLocal" TargetType="Label">
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style x:Key="ScrollLocal" TargetType="ScrollViewer">
            <Setter Property="Background" Value="Gray" />
        </Style>
    </Window.Resources>

    <StackPanel>
        <DockPanel>
            <!--  Použijeme lokální styl  -->
            <ScrollViewer x:Name="Scroll1" Style="{StaticResource ScrollLocal}">
                <Label x:Name="label1" Style="{StaticResource LabelLocal}" />
            </ScrollViewer>

            <!--  Použijeme lokální styl  -->
            <Button x:Name="button" Style="{StaticResource WindowLocal}">
                <StackPanel>
                    <Image x:Name="ButtonImage" Source="Images/HandRight.png" Width="40" Height="40" Margin="5" MouseEnter="ButtonImage_MouseEnter"/>
                    <TextBlock>Klikni na mě!</TextBlock>
                </StackPanel>
            </Button>

            <!--  Použijeme globální styl definovaný v App.xaml a platný pro všechny prvky typu Button v aplikaci  -->
            <Button x:Name="buttonToo" Content="{Binding Source={x:Static properties:Settings.Default}, Path='MeTaky'}" />
            <!--  Nápis na tlačítku vezmeme z prostoru properties, ze souboru Settings a klíčem 'ZatimNic'  -->
        </DockPanel>
        <TextBlock
            VerticalAlignment="Bottom"
            FontWeight="DemiBold"
            Background="Black"
            Foreground="White"
            Text="{Binding LastClick}" />
    </StackPanel>
</Window>
